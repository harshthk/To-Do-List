    <div class="box" id="">
        
            <% for (var i = 0; i <newitems.length;  i++ ) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= newitems[i] %> </p> 
            </div>
            <% } %> 
            
        <form action="/" method="post">
            <input type="text" name="newitem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listtitle %> ">+</button>
        </form>
    </div>

   
    

</body>
</html>